<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user_history_er.ErDetailActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/history_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/button_color"
        app:popupTheme="@style/AppTheme.AppBarOverlay">

        <ImageView
            android:id="@+id/er_detail_toolbar_back_btn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="26dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expense_detail_toolbar_title"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/er_receipt_imageview"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/unverified"/>

    <TextView
        android:id="@+id/er_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Amount: "
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30sp"/>
    <TextView
        android:id="@+id/er_vat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="VAT(%) : "
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30sp"/>
    <TextView
        android:id="@+id/er_place_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="At : "
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30sp"/>

    <TextView
        android:id="@+id/er_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Status : "
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30sp"/>

    <TextView
        android:id="@+id/er_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type : "
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30sp"/>

</LinearLayout>